<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hc.modules.class.mapper.ClassMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.hc.modules.classStudent.entity.ClassEntity" id="classMap">
        <result property="id" column="id"/>
        <result property="className" column="class_name"/>
        <result property="courseName" column="course_name"/>
        <result property="classHour" column="class_hour"/>
        <result property="tId" column="t_id"/>
        <result property="createTime" column="create_time"/>
        <result property="status" column="status"/>
    </resultMap>
    
    <select id="getClassList" resultMap="classMap">
          SELECT c.* FROM role_user a RIGHT JOIN teacher b
          ON a.id = b.user_id
          LEFT JOIN teacher c ON b.id = c.t_id
          WHERE a.username=#{username}


    </select>

</mapper>
